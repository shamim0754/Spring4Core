<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
 
    <bean id="helloWorldBean" class="com.javaaround.domain.HelloWorldImpl" />
    <bean id="activeMqMessaging" class="com.javaaround.domain.ActiveMQMessaging" />
    <bean id="communication" class="com.javaaround.spring.Communication">
    	<property name="messaging">
    		<ref bean="activeMqMessaging" />
    	</property>
    </bean>	
  
</beans>